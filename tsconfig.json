{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "declaration": true,
    "declarationDir": "./dist",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
